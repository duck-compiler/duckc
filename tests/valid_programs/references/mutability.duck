struct Person {
    name: String,
    r: &mut Int,
    r2: &Int,
    age: Int,
    other: &mut &mut &mut S,
} impl {
    fn say_hello() {
        std::io::println(f"say_hello from {self.name}");
    }

    fn clone() -> Person {
        Person {
            name: self.name,
            r: &mut (*self.r),
            r2: &(*self.r2),
            age: self.age,
            other: self.other,
        }
    }

    fn a() -> S {
        return S { x: -99 };
    }
    fn b() -> &&S {
        return &&S { x: -99 };
    }
}

struct S {
    x: Int,
} impl {
    fn abc() -> S {
        std::io::println(f"S(x = {std::string::from_int(self.x)}) abc!");
        return *self;
    }

    fn twice() -> &S {
        return &S {x: self.x * 2};
    }

    fn thrice() -> &&&&&S {
        return &&&&&S {x: self.x * 3};
    }

    mut fn s_mut_fn() -> &mut S { return self; }
}

fn get_s() -> &&S { return &&S{x: 10000}; }

